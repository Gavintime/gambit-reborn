// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  name         String   @unique @db.VarChar(12)
  gamesAsWhite Game[]   @relation("white")
  gamesAsBlack Game[]   @relation("black")
}

model Game {
  id         Int       @id @default(autoincrement())
  createdAt  DateTime  @default(now())
  finishedAt DateTime?
  result     Result    @default(ONGOING)
  plyCount   Int       @default(0)
  white      User      @relation("white", fields: [whiteId], references: [id])
  whiteId    Int
  black      User      @relation("black", fields: [blackId], references: [id])
  blackId    Int
}

enum Result {
  WHITE_WON
  BLACK_WON
  TIE
  ONGOING
}
